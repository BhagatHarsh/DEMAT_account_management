<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="style.css">
  </head>
  <body>
    <h1>Stocks</h1>
    <input type="text" id="search-bar" placeholder="Search...">
    <div class = "wrapper">
      <table id="stocks" class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th>Symbol</th>
            <th>Company Name</th>
            <th>Price</th>
            <th></th>
          </tr>
        </thead>
        <tbody style="height: 100px; overflow: auto">
          <% for (let i = 0; i < data.length; i++) { %>
            <tr>
              <td><%= data[i].symbol %></td>
              <td><%= data[i].company_name %></td>
              <td><%= data[i].price %></td>
              <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#buyModal" data-symbol="<%= data[i].symbol %>" data-name="<%= data[i].company_name %>" data-price="<%= data[i].price %>">Buy</button></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    
    <script src="script.js"></script>
  </body>
</html>
